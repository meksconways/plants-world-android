<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Plantsworldandroid" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">#212121</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="android:toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.MdcTypographyStyles.Headline1</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MdcTypographyStyles.Headline6</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSecondaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="fontFamily">@font/quicksand_bold</item>
        <item name="titleTextColor">@color/white</item>
        <item name="tabRippleColor">@null</item>
        <item name="titleTextAppearance">@style/AppTheme.ToolbarTitleText</item>
    </style>

    <style name="AppTheme.ToolbarTitleText" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="fontFamily">@font/quicksand_bold</item>
    </style>

    <!-- BottomNavigation Theme -->
    <style name="AppTheme.BottomNavTheme" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">26dp</item>
        <item name="itemTextColor">@color/bottom_navigation_color_selector</item>
        <item name="itemIconTint">@color/bottom_navigation_color_selector</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="menu">@menu/bottom_nav</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextActivate</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextInactivate</item>
        <item name="itemRippleColor">@null</item>
    </style>

    <style name="BottomNavigationTextActivate">
        <item name="fontFamily">@font/quicksand_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomNavigationTextInactivate" parent="BottomNavigationTextActivate" />





